  <body>
    <h1> Please fill out this form</h1>
    <form action="/jobs" method="post">
    
      @* Job Title *@
      <label for="jobTitle">Job Title</label>
      <input id="jobTitle" name="jobTitle" type="text">

      @* Job Description *@

      <label for="jobDescription">Job Description</label>
      <input id="jobDescription" name="jobDescription" type="text">

      @* Recruiter Name *@
      
      <label for="name">Recruiter Name</label>
      <input id="name" name="name" type="text">

      @* Recruiter Email *@
      <label for="email">Recruiter Email</label>
      <input id="email" name="email" type="text">

      @* Phone Number *@
      <label for="phonenumber">Recruiter Phone Number</label>
      <input id="phonenumber" name="phonenumber" type="text">

      @* Background *@
      <label for="phonenumber">Recruiter Profile</label>
      <input id="phonenumber" name="phonenumber" type="text">
      
      <button type="submit">Submit</button>
      
    </form>


  </body>
</html>