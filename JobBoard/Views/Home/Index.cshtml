<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>My To-Do List!</title>
    <link 
      href="~/css/styles.css" ref="stylesheet" type="text/css">
  </head>
  <body>
    
@model List<JobBoard.Models.JobOpening>

    <h1>Here is a list of names!</h1>
    
    @if ( Model.Count == 0 )
    {
      <p>sorry, there's no jobs</p>
    } else {
    <div class="container">
        @foreach (var job in Model)
        {
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">@job.Name</h5>
                    <h5 class="card-email">@job.Email</h5>
                    <h5 class="card-IDnumber">@job.IDNumber</h5>
                    <h5 class="card-phonenumber">@job.PhoneNumber</h5>  
                    <h5 class="card-gender">@job.Gender</h5>
                </div>
            </div>
        }
    </div>
    }
    
    <a href="/openings/new">Create a new job opening</a>
  </body>
</html>